<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@mipmap/wen2"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/picture3"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher_round" />
    <TextView
        android:id="@+id/ming1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="55dp"
        android:textColor="@color/colorAccent"
        android:text="当前登录用户名为："/>
    <TextView
        android:id="@+id/ming2"
        android:layout_width="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/lanse"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/ming1"
        android:text="cds"/>
    <Button
        android:id="@+id/buttonwen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:text="退出登录"
        android:layout_marginBottom="30dp"
        android:background="@color/chengse"
        android:layout_below="@+id/ming2"
        />
    <Button
        android:id="@+id/xiugaiwen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:text="修改密码"
        android:background="@color/chengse"
        android:layout_below="@+id/buttonwen"
        />
    <Button
        android:id="@+id/butimage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:text="修改头像"
        android:background="@color/chengse"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/xiugaiwen"
        />

</RelativeLayout>